{{#if result}}
{{#each result}}
<div id="playlist-item">
    <a href="#/user/{{username}}/playlist/{{id}}">
        <h3 class="result-title">{{title}}</h3>
        <p class="result-description">{{description}}</p>
        <img class="result-image" src="{{img}}">
    </a> 
    <button type="button" class="btn btn-remove"><a type="button" id="{{id.videoId}}" class="btn btn-remove" href="#/user/remove-from-playlist/{{id}}">Remove from playlist</a></button>
</div>
{{/each}}
{{else}}
<h4>You currently have no tracks in your playlist</h4>
{{/if}}